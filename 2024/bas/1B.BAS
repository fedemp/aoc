10 OPEN  "I",#1, "INPUT.TXT"
20 DIM L(1000): DIM R(1000)
30 FOR I=0 TO 999
40 LINE INPUT #1, LN$
50 LF=VAL(LEFT$(LN$,5)): RG=VAL(RIGHT$(LN$, 5))
60 L(I)=LF: R(I)=RG
70 NEXT I
100 DIM TOSORT(1000)
110 FOR I=0 TO 999 : TOSORT(I) = L(I) : NEXT: GOSUB 320
120 FOR I=0 TO 999 : L(I) = TOSORT(I) : NEXT
130 FOR I=O TO 999 : TOSORT(I) = R(I) : NEXT: GOSUB 320
140 FOR I=0 TO 999 : R(I) = TOSORT(I) : NEXT
150 ERASE TOSORT
160 TOTAL# = 0
170 FOR I = 0 TO 999
180 LOP = L(I): OCCUR = 0
190 CLS: PRINT "SEARCHING" LOP "- FOUND: " OCCUR
200 FOR J = LASTR TO 999
210 ROP = R(J)
220 IF LOP = ROP THEN OCCUR = OCCUR + 1: GOTO 250
230 IF ROP > LOP THEN GOTO 260
250 NEXT J
260 TOTAL# = TOTAL# + LOP * OCCUR
280 NEXT I
290 PRINT TOTAL#
300 END
310 REM INSERTION SORT
320 I = 1
330 WHILE I < 1000
340 CLS: PRINT "SORTING ITEM" I ": " TOSORT(I)
350 J = I
360 WHILE J > 0
370 IF TOSORT(J-1) > TOSORT(J) THEN SWAP TOSORT(J-1), TOSORT(J)
380 J = J - 1
390 WEND
400 I = I + 1
410 WEND
420 RETURN
