10 CLS
20 OPEN "i", #1, "input.txt"
30 OPEN "o", #2, "output.txt"
40 IF EOF(1) THEN GOTO 160
50 LINE INPUT #1, CURRL$
60 ITEMS = 1
70 FOR I=1 TO LEN(CURRL$)
80 CH$ = MID$(CURRL$, I, 1)
90 IF CH$=" " THEN MID$(CURRL$,I,1) = ",": ITEMS = ITEMS + 1
100 NEXT I
110 FOR J=1 TO 8-ITEMS
120 CURRL$ = CURRL$ + ","
130 NEXT J
140 PRINT #2, CURRL$
150 GOTO 40
160 CLOSE #1, #2
170 OPEN "i", #3, "OUTPUT.TXT"
180 TOTAL = 0: DIM V(7)
190 IF EOF(3) THEN PRINT TOTAL: CLOSE #3: KILL "output.txt": END
200 INPUT #3, V1,V2,V3,V4,V5,V6,V7,V8
210 V(0) = V1: V(1) = V2: V(2) = V3: V(3) = V4
220 V(4) = V5: V(5) = V6: V(6) = V7: V(7) = V8
230 ORDER$ = ""
240 FOR I=0 TO 6
250 IF V(I+1) = 0 GOTO 330
260 IF ORDER$ = "" AND V(I) > V(I+1) THEN ORDER$ = "d"
270 IF ORDER$ = "" AND V(I) < V(I+1) THEN ORDER$ = "a"
280 RESULT = ABS(V(I) - V(I+1))
300 IF RESULT > 3 OR RESULT = 0 GOTO 190
310 IF ORDER$ = "d" AND V(I) < V(I+1) GOTO 190
320 IF ORDER$ = "a" AND V(I) > V(I+1) GOTO 190
330 NEXT I
340 TOTAL = TOTAL + 1
350 GOTO 190
